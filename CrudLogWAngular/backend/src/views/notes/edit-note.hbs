<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit notes</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note.id}}? method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" id="" class="form-control" cols="30" rows="10">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>